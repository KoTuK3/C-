        </Border>
        <Border Grid.Column="6" Grid.ColumnSpan="2" Style="{StaticResource YellowBtn}" >
            <Button Template="{StaticResource NoMouseOverButtonTemplate}" Content="3" Style="{StaticResource BoldFont}"/>
        </Border>
        <Border Grid.Column="8" Grid.ColumnSpan="2" Style="{StaticResource GreenBtn}"  >
            <Button Template="{StaticResource NoMouseOverButtonTemplate}" Content="4" Style="{StaticResource BoldFont}"/>
        </Border>
        <Border Grid.Column="10" Grid.ColumnSpan="2" Style="{StaticResource BlueBtn}"  >
