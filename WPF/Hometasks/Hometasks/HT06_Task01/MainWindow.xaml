<Window x:Class="HT06_Task01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HT06_Task01"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="1200">

    
    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" 
                 TargetType="{x:Type Button}">
            <Border Background="{TemplateBinding Background}"
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{Binding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

        </ControlTemplate>
        
        <Style x:Key="GreyBtn" TargetType="{x:Type Border}">
            
            <Setter Property="Background" Value="#b6b6b6"/>
            <Setter Property="BorderBrush" Value="#000"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Margin" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="24"/>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard TargetProperty="FontSize">
                                <DoubleAnimation From="24" To="15"
                                         Duration="0:0:01"/>
                                <DoubleAnimation From="15" To="24"
                                         Duration="0:0:01"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BoldFont" BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="GreenBtn" BasedOn="{StaticResource ResourceKey=GreyBtn}" TargetType="{x:Type Border}" >
            <Setter Property="Background" Value="#80f078"/>
        </Style>
        <Style x:Key="PinkBtn" BasedOn="{StaticResource ResourceKey=GreyBtn}" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#f07896"/>
        </Style>
        <Style x:Key="YellowBtn" BasedOn="{StaticResource ResourceKey=GreyBtn}" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#e7f078"/>
        </Style>
        <Style x:Key="BlueBtn" BasedOn="{StaticResource ResourceKey=GreyBtn}" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#78bff0"/>
        </Style>
        <Style x:Key="PurpleBtn" BasedOn="{StaticResource ResourceKey=GreyBtn}" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#dc78f0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="2" Style="{StaticResource PinkBtn}">
            <Button Template="{StaticResource NoMouseOverButtonTemplate}"  Content="`"  Style="{StaticResource BoldFont}" />
        </Border>
        <Border Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource PinkBtn}"   >
            <Button Template="{StaticResource NoMouseOverButtonTemplate}" Content="1" Style="{StaticResource BoldFont}"/>
        </Border>
        <Border Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource PinkBtn}"   >
