        </DockPanel>
        <DockPanel DockPanel.Dock="Top"></DockPanel>

        <UniformGrid DockPanel.Dock="Bottom" Rows="2" Columns="4" Margin="50,50,50,75">
            <Image Width="300" Margin="5" Height="100" Source="https://www.w3schools.com/w3css/img_lights.jpg" Stretch="Fill"/>
