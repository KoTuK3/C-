            <Image Width="300" Margin="5" Height="100" Source="https://www.w3schools.com/w3css/img_lights.jpg" Stretch="Fill"/>
        </UniformGrid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
