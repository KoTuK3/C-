            <Image Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Source="https://www.w3schools.com/w3css/img_lights.jpg" Stretch="Fill"/>

            <StackPanel Grid.Row="0" Grid.Column="2" Margin="25">
